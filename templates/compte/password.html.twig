<center>
    <br>
    <h1>Modifier mot de passe </h1>

    <hr>
    <a href="{{ path('compte') }}" > Retourner Ã  mon compte </a> <br/>
    <hr>
    {% if notification %}
        <div class="alert alert-info">{{ notification }}</div>
    {% endif %}
    <div class="container">
    {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}
        <div class="form-group">

            {{ form_row(form.firstname, {'attr': {'class' : 'form-control'}} ) }}
        </div>
        <div class="form-group">

            {{ form_row(form.lastname, {'attr': {'class' : 'form-control'}} ) }}
        </div>
        <div class="form-group">

            {{ form_row(form.email, {'attr': {'class' : 'form-control'}} ) }}
        </div>
        <div class="form-group">

            {{ form_row(form.old_password, {'attr': {'class' : 'form-control'}} ) }}
        </div>
        <div class="form-group">

            {{ form_row(form.new_password, {'attr': {'class' : 'form-control'}} ) }}
        </div>

        {{ form_end(form) }}

    </div>
