<div class="m-portlet__body">
    <!--begin::Section-->
    <div class="m-section">
        <div class="m-section__content">
            <table class="table m-table m-table--head-bg-success">
                <thead>
                <tr>
                    <th>
                        id
                    </th>
                    <th>
                        total location
                    </th>

                    <th>
                        duree location
                    </th>

                    <th>
                        date debut location
                    </th>

                    <th>
                        date fin location
                    </th>

                    <th>
                        adresse locataire
                    </th>

                    <th>
                        nom locataire
                    </th>


                </tr>
                </thead>

                {% for U in location %}
                <tr>
                    <td>

                        {{ U.id }}
                    </td>
                    <td>
                        {{ U.totallocation }}
                    </td>
                    <td>
                        {{ U.dureelocation }}
                    </td>
                    <td>
                        {{ U.datedebutlocation |date("m/d/Y")  }}
                    </td>
                    <td>
                        {{ U.datefinlocation |date("m/d/Y")  }}
                    </td>
                    <td>
                        {{ U.adresselocatairelocation }}
                    </td>
                    <td>
                        {{ U.nomlocatairelocation }}
                    </td>


                    {% endfor %}
                    </tbody>
                </tr>
                </td>
            </table>

        </div>
    </div>
</div>