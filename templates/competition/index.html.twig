{% extends 'base.html.twig' %}
{% block body %}
    <div class="rt-breadcump rt-breadcump-height">
        <div class="rt-page-bg rtbgprefix-cover" style="background-image: url('{{ asset('front/assets/images/backgrounds/bredcump.png') }}')">
        </div><!-- /.rt-page-bg -->
        <div class="container">
            <div class="row rt-breadcump-height">
                <div class="col-12">
                    <div class="breadcrumbs-content">

                        <h3>Competition</h3>
                        <div class="breadcrumbs">
                            <span class="divider"><i class="icofont-home"></i></span>
                            <a href="#" title="Home">Home</a> / <a href="{{ path('AfficheParticipations') }}">Participation</a>
                            <span class="divider"><i class="icofont-simple-right"></i></span>
                            ---------

                        </div><!-- /.breadcrumbs -->
                    </div><!-- /.breadcrumbs-content -->
                </div><!-- /.col-12 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.rt-bredcump -->

    <section class="content-area">

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="card-description">
                        <br>
                    <form method="POST">
                        <div class="rt-banner-searchbox trip-search">
                            <div class="rt-input-group">


                                <div class="single-input  col-md-9">
                                    <input type="text" class="form-control" name="recherche" placeholder="{% trans %}Events{% endtrans %}">

                                </div><!-- /.single-input -->
                                <div class="single-input  col-md-3">
                                    <input type="submit"value="{% trans %}search{% endtrans %}"  class="rt-btn rt-gradient pill text-uppercase d-block rt-Bshadow-2">
                                </div><!-- /.single-input -->

                            </div><!-- /.rt-input-group -->
                        </div><!-- /.rt-banner-searchbox --><br>

                        </p>

                        {% for message in app.flashes('info') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}


                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Categorie</th>
                                    <th>Nombre de places</th>
                                    <th>Image</th>
                                    <th>Adresse</th>
                                    <th>date comp√©tition</th>
                                    <th>ACTIONS</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for comp in competitions %}
                                    <tr>
                                        <td>{{ comp.nom }}</td>
                                        <td>{{ comp.description }}</td>
                                        <td>{{ comp.category }}</td>
                                        <td>{{ comp.nombreDePlace }}</td>
                                        <td>
                                            <img src={{ comp.image}} style="height:70px;width:70px;" />
                                        </td>

                                        <td>{{ comp.adresse }}</td>

                                        <td>{{ comp.date|date('d-m-Y') }}</td>
                                        <td>
                                            <label class="badge badge-warning">
                                                <a href={{ path("modifCompetition", {'idComp': comp.id }) }} style="text-decoration:none;color:#fff;">MODIFIER</a>
                                            </label>

                                            <label class="badge badge-danger">
                                                <a href={{ path("suppCompetition", { 'idComp': comp.id }) }} style="text-decoration:none;color:#fff;">SUPPRIMER</a>
                                            </label>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                </div>
            </div>
        </div></section>




{% endblock %}