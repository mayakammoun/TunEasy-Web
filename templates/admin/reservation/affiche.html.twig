        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="icon-menu"></span>
        </button>
    </div>
</nav>

<div style="height: 80px">

</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste des reservations de competitions</h4>
                <p class="card-description">
                    {{ ReservationCompetitions|length }} <code>competition(s)</code>
                </p>
                <p class="card-description">
                    <code>
                        <a href={{ path("ajoutReservation") }} style="text-decoration:underline;color:#FF4747">Ajouter Reservationcomp√©tition</a>
                    </code>
                </p>



                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>

                            <th>Nombre de participants </th>
                            <th>ACTIONS</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for compR in ReservationCompetitions %}
                            <tr>
                                <td>{{ compR.nbrparticipants }}</td>

                                <td>
                                    <a href={{ path("deleteReservationCompetition", { 'idRes': compR.id }) }} style="text-decoration:none;color:red;">SUPPRIMER</a>

                                </td>
                                <td>
                                    <label class="badge badge-warning">
                                        <a href={{ path("modifReservation", {'idRes': compR.id }) }} style="text-decoration:none;color:red">MODIFIER</a>
                                    </label>
                                </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>